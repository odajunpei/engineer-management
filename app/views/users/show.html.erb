<<div>
  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>
<% @help_posts.each do |help_post| %>
<div>
  <%= link_to help_post_path(help_post.id) do %>
    <%= attachment_image_tag help_post, :image %>
  <% end %>
  <p>タイトル：<%= help_post.title %></p>
  <p>掲載ページのURL：<%= help_post.url %></p>
  <p>説明：<%= help_post.descriprion %></p>
</div>
<% end %>
<%= paginate @help_posts %>
